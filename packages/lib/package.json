{
  "name": "@vue3-range-calendar/lib",
  "version": "0.3.3",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "scripts": {
    "build": "rm -rf ./dist && pnpm build:lib && pnpm build:types && pnpm build:style",
    "build:lib": "rollup -c rollup.config.js",
